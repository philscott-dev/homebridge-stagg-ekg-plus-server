{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
  },
  "include": ["./src/**/*.ts"]
}
