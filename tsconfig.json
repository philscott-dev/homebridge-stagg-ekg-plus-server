{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "packages",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
